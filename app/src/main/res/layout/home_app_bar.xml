<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_bar_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:layout_behavior="com.assassin.running.money.widget.HomeAppBarBehavior"
    tools:context=".home.HomeActivity">

    <android.support.design.widget.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentScrim="@color/colorPrimaryDark"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:titleEnabled="false">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_banner_home"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/colorPrimary"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.7">

            <TextView
                android:id="@+id/tv_title_home_financial_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="160dp"
                android:layout_marginRight="160dp"
                android:layout_marginTop="100dp"
                android:text="@string/financial_money"
                android:textColor="@color/colorPaletteSecondaryText"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_home_financial_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100,000000000000000.00"
                android:textColor="@color/colorPaletteText"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="@+id/tv_title_home_financial_money"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_home_financial_money" />

            <TextView
                android:id="@+id/tv_title_home_expect_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/expect_income"
                android:textColor="@color/colorPaletteSecondaryText"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_home_financial_money"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_financial_money" />

            <TextView
                android:id="@+id/tv_home_expect_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3,820.00"
                android:textColor="@color/colorPaletteText"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="@+id/tv_title_home_expect_income"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_home_expect_income" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#00000000"
            android:visibility="visible"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="38dp"
                    android:layout_marginRight="38dp"
                    android:text="总资产:10000,000.00"
                    android:textColor="@color/colorPaletteText"
                    android:textSize="20sp" />
            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.CollapsingToolbarLayout>


</android.support.design.widget.AppBarLayout>
